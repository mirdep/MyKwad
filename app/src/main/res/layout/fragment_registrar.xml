<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/azul"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/retangulo_azul"
        app:layout_constraintBottom_toTopOf="@+id/cinza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/cinza"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/retangulo_cinza"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editText_registrar_email" />

    <View
        android:id="@+id/branco"
        android:layout_width="0dp"
        android:layout_height="420dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/retangulo_branco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/button_registrar_sair"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_close_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/azul" />

    <EditText
        android:id="@+id/editText_registrar_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="E-mail"
        android:textColor="#7A7A7A"
        app:layout_constraintEnd_toEndOf="@+id/branco"
        app:layout_constraintStart_toStartOf="@+id/branco"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/editText_registrar_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nome completo"
        android:textColor="#7A7A7A"
        app:layout_constraintEnd_toEndOf="@+id/editText_registrar_email"
        app:layout_constraintStart_toStartOf="@+id/editText_registrar_email"
        app:layout_constraintTop_toBottomOf="@+id/editText_registrar_email" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/catamaran"
        android:text="Complete os seus dados"
        android:textColor="#161616"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/branco"
        app:layout_constraintStart_toStartOf="@+id/branco"
        app:layout_constraintTop_toTopOf="@+id/branco" />

    <EditText
        android:id="@+id/editText_registrar_usuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="UsuÃ¡rio"
        android:textColor="#7A7A7A"
        app:layout_constraintEnd_toEndOf="@+id/editText_registrar_nome"
        app:layout_constraintStart_toStartOf="@+id/editText_registrar_nome"
        app:layout_constraintTop_toBottomOf="@+id/editText_registrar_nome" />

    <EditText
        android:id="@+id/editText_registrar_senha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Senha"
        android:textColor="#7A7A7A"
        app:layout_constraintEnd_toEndOf="@+id/editText_registrar_usuario"
        app:layout_constraintStart_toStartOf="@+id/editText_registrar_usuario"
        app:layout_constraintTop_toBottomOf="@+id/editText_registrar_usuario" />

    <Button
        android:id="@+id/button_registrar_criarconta"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_borda_redonda"
        android:text="Criar conta"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/editText_registrar_senha"
        app:layout_constraintTop_toBottomOf="@+id/editText_registrar_senha" />

    <View
        android:id="@+id/button_registrar_senha_visualizar"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_remove_red_eye_black_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/editText_registrar_senha"
        app:layout_constraintEnd_toEndOf="@+id/editText_registrar_senha"
        app:layout_constraintTop_toTopOf="@+id/editText_registrar_senha" />

</androidx.constraintlayout.widget.ConstraintLayout>
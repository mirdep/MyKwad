<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/colorPrimarySoftDark">

    <ImageView
        android:id="@+id/imageView_viewholder_peca_foto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/esc" />

    <TextView
        android:id="@+id/textView_viewholder_peca_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="monospace"
        android:text="Esc 4em1 Racerstar 30A"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imageView_viewholder_peca_foto"
        app:layout_constraintTop_toTopOf="@+id/imageView_viewholder_peca_foto" />
</androidx.constraintlayout.widget.ConstraintLayout>